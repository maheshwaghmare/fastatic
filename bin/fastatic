#!/usr/bin/env node

const fastatic = require('../index');
const pkg = require('../package');

const program = require('commander')
	.version(pkg.version)
	.description(`${pkg.name} (v${pkg.version}): ${pkg.description}`)
	.usage('<src> [options]')
	.option('-d, --dest [value]', 'Output destination')
	.parse(process.argv);

const src = program.args[0];
const dest = program.dest;
let options = {};

options = (src) ? Object.assign(options, {src: src}) : options;
options = (dest) ? Object.assign(options, {dest: dest}) : options;

fastatic(options);
